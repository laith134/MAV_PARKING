<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentParkingInformation">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/parkinfstudent" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The blue parking lot are  Lot-49, Lot- 51, Lot-52.\n For more information click the link below:\n"
        android:textColor="@color/black"
        android:visibility="visible"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColorHighlight="@color/black"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="\t\thttps://www.uta.edu/pats/"
        android:textColor="#0000ff"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        app:backgroundTint="#FF5722"/>

</RelativeLayout>

